{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

<main class="container">

<div class="d-flex justify-content-between align-items-center">
    <h1>{{ article.title }}</h1>
    <a class="nav-link" href="{{ path('app_article_index') }}">Retour a la list des articles</a>

</div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.contenu }}</td>
            </tr>
            <tr>
                <th>DatePublication</th>
                <td>{{ article.datePublication ? article.datePublication|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ImageSrc</th>
                <td>{{ article.imageSrc }}</td>
            </tr>
            <tr>
                <th>NombreVues</th>
                <td>{{ article.nombreVues }}</td>
            </tr>
        </tbody>
    </table>

<div class="d-flex">
    {{ include('article/_delete_form.html.twig') }}
    {# <a class="btn btn-primary" href="{{ path('app_article_edit', {'id': article.id}) }}">Edit</a> #}
</div>
</main>
{% endblock %}

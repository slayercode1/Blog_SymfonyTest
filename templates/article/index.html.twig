{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

<main class="container">

    <div class="d-flex justify-content-between align-items-center">
        <h1>Les article</h1>
        <div class="d-flex">
            <a class="btn btn-primary" href="{{ path('app_article_new') }}">Cre√©r</a>
            <a class="nav-link" href="{{ path('app_cate_index') }}">Categorie</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Date</th>
                <th>Image</th>
                <th>Nombre de Vues</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.contenu }}</td>
                <td>{{ article.datePublication ? article.datePublication|date('d/m/Y') : '' }}</td>
                <td>{{ article.imageSrc }}</td>
                <td>{{ article.nombreVues }}</td>
                <td>
                    <div class="d-flex">
                        <a class="nav-link" href="{{ path('app_article_show', {'id': article.id}) }}">Voir</a>
                        <a class="nav-link" href="{{ path('app_article_edit', {'id': article.id}) }}">Editer</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</main>
{% endblock %}
